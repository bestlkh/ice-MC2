{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jasmine": true,
        "jquery": true,
        "mongo": true,
        "mocha": true
    },
    "extends": "eslint-config-google",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
             4
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error", { "code": 2000 }
        ],
        "comma-dangle": [
            "error",
            "never"
        ]
    }
}
